# Install hotfix rpm
RUN rpm-ostree override replace ${KERNEL_RPM} && \
    rpm-ostree cleanup -m && \
    cd /usr/lib/modules/4.18.0-372.40.1.el8_6.iavf.bz2149746.bz2152493.x86_64/ && sed -i 's/\/boot\///g' .vmlinuz.hmac && \
    ostree container commit
